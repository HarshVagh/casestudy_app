<%= render "devise/shared/header"%>
<div class="container">
    <br>
    <div class="row justify-content-center mt-4">
        <div class="col-6 ">
            <div class="card text-center">
                <div class="card-header h4">
                    <b>Member Log in</b>
                </div>
                <div class="card-body">
                    <div>
                        
                        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                          
                          <div class="form-floating mb-3">
                            <%= f.email_field :email, type: "email",  class:"form-control", id:"floatingInputEmail", placeholder:"name@example.com" %>
                            <%= f.label :email, for:"floatingInputEmail" %>
                          </div>

                          <div class="form-floating mb-3">
                            <%= f.email_field :password, type: "password",  class:"form-control", id:"floatingPassword", placeholder:"name@example.com" %>
                            <%= f.label :password, for:"floatingPassword"%>                            
                          </div>
                          
                          <% if devise_mapping.rememberable? %>
                            <div class="form-check mb-3 col-4">
                              <div class="col-3"></div>
                              <%= f.check_box :remember_me, class:"form-check-input", type:"checkbox", id:"flexCheckDefault" %>
                              <%= f.label :remember_me, class:"form-check-label", for:"flexCheckDefault" %>
                            </div>
                          <% end %>

                          <div class="actions">
                            <%= f.submit "Log in", class:"btn btn-primary col-4" %>
                          </div>

                          
                                                
                        <% end %>
                    </div>
                </div>
                <div class="card-footer text-muted text-center">
                    Already have an Account? 
                    <%= render "devise/shared/links" %>
                </div>
            </div>
        </div>
    </div>
</div>

